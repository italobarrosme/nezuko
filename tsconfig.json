{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".src/",
    "paths": {
      "@/constants/*": [
        "constants/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/layouts/*": [
        "layouts/*"
      ],
      "@/useCases/*": [
        "useCases/*"
      ],
      "@/useComponents/*": [
        "useComponents/*"
      ],
      "@/usePieces/*": [
        "usePieces/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/ui/*": [
        "ui/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}